// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id             String   @id @default(uuid())
  externalId     String   @unique // ID from the standardized source (or combined ID)
  homeTeam       String
  awayTeam       String
  league         String?
  source         String   @default("flashscore")
  sport          String   @default("football") // e.g. "football", "tennis", "basketball"
  startTime      DateTime
  projectedEnd   DateTime
  status         String      @default("SCHEDULED")
  homeScore      Int?
  awayScore      Int?
  markets        Market[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Market {
  id             String   @id @default(uuid())
  eventId        String
  name           String   // e.g. "Match Winner", "Over/Under 2.5"
  status         String   @default("OPEN")
  winningOutcome String?  // The result of the market (e.g. "Home Win", "Over 2.5")
  event          Event    @relation(fields: [eventId], references: [id])
  bets           Bet[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model User {
  id           String   @id @default(uuid())
  username     String   @unique
  email        String   @unique
  passwordHash String
  wallet       Wallet?
  bets         Bet[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Wallet {
  id        String   @id @default(uuid())
  userId    String   @unique
  balance   Float    @default(0)
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Bet {
  id        String   @id @default(uuid())
  userId    String
  marketId  String
  outcome   String   // The outcome the user bet on (e.g. "Home Win")
  stake     Float
  status    String   @default("PENDING") // PENDING, WON, LOST
  payout    Float?   // Calculated on settlement
  user      User     @relation(fields: [userId], references: [id])
  market    Market   @relation(fields: [marketId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

